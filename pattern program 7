#include <stdio.h>

int main()
{
    int i=0,j=0,k=1,l=0;
    
    for(i=1;i<=4;i++)
    {
        for(k=4;k>=i;k--)
        {
            printf(" ");   
        }
            for(j=1;j<=i;j++)
            {
                printf("*");
            }
            
            for(l=2;l<=i;l++)
            {
                printf("*");
            }
        
        
        printf("\n");
    }
    
     for(i=1;i<=3;i++)
    {
        for(k=1;k<=i+1;k++)
        {
            printf(" ");   
        }
            for(j=3;j>=i;j--)
            {
                printf("*");
            }
            
            for(l=2;l>=i;l--)
            {
                printf("*");
            }
        
        
        printf("\n");
    }
    
