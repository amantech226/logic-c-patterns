#include <stdio.h>

int main()
{
    int i=0,j=0,k=1;
    
    for(i=1;i<=4;i++)
    {
        for(k=4;k>i;k--)
        {
            printf(" ");
        }
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    
    
    for(i=1;i<4;i++)
    {
        for(k=1;k<=i;k++)
        {
            printf(" ");
        }
        for(j=3;j>=i;j--)
        {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}
